<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_color">


    <TextView
        android:background="@drawable/baseline_person_24"
        android:id="@+id/botao_trocar_login"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"/>

    <TextView
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Login"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>


    <EditText
        android:id="@+id/id_telefone"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:inputType="phone|number"
        android:layout_height="48dp"
        android:hint="Numero de telefone" />

    <EditText
        android:id="@+id/id_palavraPasse"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Palavra-passe"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/id_botao_esqueceu"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="Esqueceu a palavra-passe?"
        android:textStyle="bold"
        android:textSize="16dp"/>



    <Button
        android:id="@+id/id_botao_entrar"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="10dp"
        android:text="Entrar"
        android:background="@drawable/buttons_gradient"/>



    <Button
        android:id="@+id/id_botao_criar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="14dp"
        android:text="Criar conta"
        android:drawableRight="@drawable/baseline_add_24"
        android:background="@drawable/buttons_gradient"
        android:layout_marginTop="10dp"/>


</LinearLayout>
