<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_color">

    <Button

        android:id="@+id/id_botao_voltar"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttons_gradient"
        android:drawableTop="@drawable/baseline_botao_voltar_back_24" />


    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="27dp"
        android:layout_gravity="center"
        android:background="@drawable/baseline_nova_conta_alt_1_24"/>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/id_PrimeiroNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Primeiro Nome"
        android:inputType="text"/>

    <EditText
        android:id="@+id/id_UltimoNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="Ultimo Nome" />

    <EditText
        android:id="@+id/id_matricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="N de matricula"
        android:inputType="number"/>

    <EditText
        android:id="@+id/id_nacionalidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nacionalidade"
        android:inputType="text"/>

    <EditText
        android:id="@+id/id_NumeroTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero de Telefone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/id_palavra_passe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Palavra-passe"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/id_botao_criar_conta"
        android:layout_width="170dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="Criar conta"
        android:background="@drawable/buttons_gradient"
        android:drawableRight="@drawable/baseline_add_24"/>


    <Button
        android:id="@+id/id_restaurar_campos"
        android:layout_width="170dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Restaurar campos"
        android:background="@drawable/buttons_gradient"
        android:layout_marginTop="10dp"/>


</LinearLayout>
